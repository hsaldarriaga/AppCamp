<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondomapa">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:paddingTop="80dp"
        android:paddingLeft="40dp">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageButton3"
            android:onClick="StartGame"
            android:tag="0"
            android:background="@drawable/place1" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageButton11"
            android:onClick="StartGame"
            android:tag="1"
            android:layout_gravity="center_vertical"
            android:background="@drawable/place4"/>

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageButton13"
            android:onClick="StartGame"
            android:tag="8"
            android:background="@drawable/place5"/>

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageButton15"
            android:onClick="StartGame"
            android:tag="5"
            android:background="@drawable/place7"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:paddingLeft="30dp">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageButton10"
            android:onClick="StartGame"
            android:tag="6"
            android:background="@drawable/place2"
            android:layout_marginTop="80dp" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageButton12"
            android:onClick="StartGame"
            android:tag="3"
            android:layout_gravity="center_vertical"
            android:background="@drawable/place3"/>

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageButton14"
            android:onClick="StartGame"
            android:tag="7"
            android:background="@drawable/place6"/>

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageButton16"
            android:onClick="StartGame"
            android:tag="4"
            android:background="@drawable/place8"/>

    </LinearLayout>
</LinearLayout>